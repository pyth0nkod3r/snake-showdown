{
    "name": "snake-showdown",
    "version": "1.0.0",
    "private": true,
    "description": "Snake Showdown - Full-stack game application",
    "scripts": {
        "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && make dev",
        "dev:frontend": "cd frontend && npm run dev",
        "test": "concurrently -n \"backend,frontend\" \"npm run test:backend\" \"npm run test:frontend\"",
        "test:backend": "cd backend && make test",
        "test:frontend": "cd frontend && npm test"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    }
}
